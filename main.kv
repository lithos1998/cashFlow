MyScreenManager:
    MainScreen:
    IncomeScreen:
    TransactionScreen:


<MainScreen>:
    name: 'main_screen'
    BoxLayout:
        orientation: 'vertical'

        Label:
            text:"welcome to main screen"
            font_size: 30

        GridLayout:
            id: grid_main
            cols: 2
            padding: 30
            spacing: 40
            Button:
                id: expense_btn
                text:'Expenses'
                size_hint_x: 1
                on_release: app.root.current = 'transaction_screen'
            Button:
                id: income_btn
                text:'Incomes'
                size_hint_x: 1
                on_release: app.root.go_income_screen()
                # lo del status


<IncomeScreen>:
    name:'income_screen'

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "this is the income screen"
            font_size: 30

        GridLayout:
            id: grid_prueba
            cols: 2
            padding: 30
            spacing: 40

        FloatLayout:
            Button:
                id: boton_prueba
                text: "go to previous screen"
                size_hint: (.4, .2)
                pos_hint: {'x': .3, 'y': .4}
                on_release: app.root.current = 'main_screen'


<TransactionScreen>:
    name:'transaction_screen'

    BoxLayout:
        orientation: 'vertical'

        Label:
            text: "this is the transaction screen"
            font_size: 30

        GridLayout:
            id: grid_prueba
            cols: 1
            padding: 30

            Button:
                text: "Asdasd"
                font_size: 30


